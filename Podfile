# Uncomment the next line to define a global platform for your project
platform :ios, '12.0'

target 'News App' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for News App

  #For image loading
  pod 'SDWebImage', '~> 5.0'
	
  #For view loading
  pod 'SkeletonView'

  #For Tabs
  pod 'XLPagerTabStrip', '~> 9.0'

end
